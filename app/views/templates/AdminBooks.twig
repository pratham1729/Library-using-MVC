{% extends "templates/base.twig" %}

{% block title %} Booklist {% endblock %}

{% block body %}
<center>
<div class="jumbotron">
    <br>
    <h1>Admin Book Management</h1>
    <br>
</div>
<table id="books">
{% for book in booklist %}
    <tr>
        <td>
            {{ book["book_id"] }}
        </td>
        <td>
            {{ book["book_name"] }}
        </td>
    {% if book["issued_by"]==null %}
        <td>
            Available
        </td>
    {% else %}
        <td>
            Not Available
        </td>
    {% endif %}
    </tr>
{% endfor %}

</table>
<form action="/addbook" method="POST">
    <input type="text" name="book-id">
    <input type="text" name="book-name">
    <input type="submit" value="Add this book" class="btn btn-primary"/>
</form>
<br>
<br>
<form action="/removebook" method="POST">
    <input type="text" name="book-id" placeholder="Book Id">
    <input type="submit" value="Remove this book" class="btn btn-primary"/>
</form>
<form action="/adminhome" method="GET">
    <input type="submit" value="Home" class="btn btn-primary"/>
</form>
</center>
{% endblock %}