{% extends "templates/base.twig" %}

{% block title %}Client Register Page{% endblock %}

{% block body %}
<center>
<div class="jumbotron">
<h1>Client Registration Portal</h1>
</div>
{% if error %}
<p>{{ msg }}</p>
{% endif %}
<form action="/register" method="POST">
    <input type="text" name="type" value="client" style="display: none;">
    Username:<input type="text" name="uname" placeholder="Username">
    <br>
    Password:<input type="password" name="password" placeholder="Password">
    <br>
    Confirm Password:<input type="password" name="passwordC" placeholder="Confirm Password">
    <br>
    <input type="submit" value="Register"/>
</form>
<form action="/" method="GET">
<input type="submit" value="Home"/>
</form>
</center>
{% endblock %}