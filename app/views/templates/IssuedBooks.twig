{% extends "templates/base.twig" %}

{% block title %}Issued Books{% endblock %}

{% block body %}
<center>
<div class="jumbotron">
    <h1>Issued Books</h1>
</div>
<table>
{% for book in issued %}
    <tr>
        <td style="padding:10px">
            {{ book["book_id"] }}
        </td>
        <td style="padding:10px">
            {{ book["book_name"] }}
        </td>
        <td style="padding:10px">
            <form action="/return" method="POST"><input type="text" value="{{ book["book_name"] }}" name="book-name" style="display:none"><input type="text" value="{{ uname }}" name="username" style="display:none"><input type="text" value="{{ book["book_id"] }}" name="book-id" style="display:none"><input type="submit" value="Return" class="btn btn-primary"></form>
        </td>
    </tr>
{% endfor %}
</table>
<br><br>
<form action="/clienthome" method="GET">
    <input type="text" name="type" value="client" style="display: none;">
    <input type="submit" value="Home" class="btn btn-primary"/>
</form>
</center>

{% endblock %}