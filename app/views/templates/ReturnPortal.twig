{% extends "templates/base.twig" %}

{% block title %}Return Portal{% endblock %}

{% block body %}
<center>
<div class="jumbotron">
    <h1>Return Portal</h1>      
</div>
<table id="requestlist">
{% for book in ret %}
    <tr>
        <td style="padding:10px">
            {{ book["book_id"] }}
        </td>
        <td style="padding:10px">
            {{ book["book_name"] }}
        </td>
        <td>
            {{ book["requested_by"] }}
        </td>
        <td style="padding:10px">
            <form action="/returnaccept" method="POST"><input type="text" value="{{ book["requested_by"] }}" name="username" style="display:none"><input type="text" value="{{ book["book_id"] }}" name="book-id" style="display:none"><input type="submit" value="Approve" class="btn btn-primary"></form>
        </td>
    </tr>
{% endfor %}
</table>
<br><br>
<form action="/adminhome" method="GET">
    <input type="text" name="type" value="client" style="display: none;">
    <input type="submit" value="Home" class="btn btn-primary"/>
</form>
</center>
{% endblock %}